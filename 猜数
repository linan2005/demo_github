#猜数
import random


counts=3
answer=random.randint(1,10)


while counts > 0:
    temp=input("不妨猜一下xx现在心里想的是哪个数字:")
    guess=int(temp)

    if guess == answer:
        print("你是xx心里的蛔虫吗")
        print("哼，猜中了也没什么奖励!")
        break 
    else:
        if guess < answer:
            print("小了")
        else:
            print("大了")
    counts=counts-1
        
print("游戏结束，不玩了^_^")
